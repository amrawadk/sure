<% content_for :title, "Lunch Flow" %>

<%= settings_section title: "Lunch Flow", subtitle: "Connect bank accounts via supported open banking providers. Follow the instructions and watch the demo below." do %>
  <div class="prose prose-invert max-w-none">
    <ol>
      <li>Sign up to <%= link_to "Lunch Flow", "https://lunchflow.app", target: "_blank", rel: "noopener", class: "underline" %>.</li>
      <li>Generate an API key for your Sure instance.</li>
      <li>
        Add a destination for Sure in your Lunch Flow account using that API key and your Sure instance base URL:
        <span data-controller="clipboard" class="inline-flex items-center gap-2">
          <code data-clipboard-target="source"><%= request.base_url %></code>
          <button class="inline-flex items-center gap-1 text-xs text-secondary hover:text-primary" data-action="click->clipboard#copy">
            <span data-clipboard-target="iconDefault"><%= icon("copy") %></span>
            <span class="hidden" data-clipboard-target="iconSuccess"><%= icon("check") %></span>
            Copy
          </button>
        </span>
      </li>
    </ol>
  </div>

  <div class="rounded-lg border border-primary overflow-hidden h-[65vh] md:h-[75vh]">
    <iframe
      src="https://screen.studio/share/6m2S3U5E?embed=1"
      title="Lunch Flow - Sure Integration v1"
      class="w-full h-full"
      allow="fullscreen; picture-in-picture"
      allowfullscreen
      loading="lazy"
    ></iframe>
  </div>
<% end %>

